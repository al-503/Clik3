<div class="restaurants">
  <% @restaurants.each do |r|%>
    <div class="restaurant">
      <%= link_to restaurant_path(r) do %>

        <h2><%= r.full_name %></h2>
        <h3><%= r.speciality %></h3>
        <p><%= r.phone_number %></p>
        <p><%= r.adress %></p>

      <% end %>
    </div>
  <% end %>
</div>